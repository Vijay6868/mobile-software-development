<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/minusButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200px"
        android:layout_marginTop="200px"
        android:text="-"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="130dp"
        android:onClick="onBtnMinus"/>

    <Button
        android:id="@+id/multiButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="400px"
        android:layout_marginTop="200px"
        android:text="x"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="130dp"
        android:onClick="onBtnMulti"/>


    <TextView
        android:id="@+id/lbOperator"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="420px"
        android:layout_marginTop="80px"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="600px"
        android:layout_marginTop="200px"
        android:text="+"
        android:onClick="onBtnPlus"/>

    <EditText
        android:id="@+id/tbNum1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="590px"
        android:layout_marginTop="60px"/>

    <EditText
        android:id="@+id/tbNum2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="150px"
        android:layout_marginTop="60px"
        />

    <EditText
        android:id="@+id/tbResult"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300px"
        android:layout_marginTop="400px"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>